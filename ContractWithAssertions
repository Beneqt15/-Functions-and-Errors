pragma solidity ^0.8.0;

contract ContractWithAssertions {
    uint256 public value;

  
    function setValue(uint256 _newValue) external {
        require(_newValue > 0, "Value must be greater than zero");
        value = _newValue;
    }

    function doubleValue() external {
        assert(value * 2 > value);
        
        value *= 2;
    }

    function decrementValue(uint256 _amount) external {
        if (_amount > value) {
            revert("Underflow occurred");
        }
        
        value -= _amount;
    }
}
